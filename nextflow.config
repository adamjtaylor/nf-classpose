/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    nf-classpose Nextflow config file
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

// Pipeline parameters
params {
    // Input/output
    input                           = null
    outdir                          = 'results'

    // Model configuration
    model_config                    = 'conic'

    // ROI
    roi_geojson                     = null

    // Tissue/artefact detection (pre-bundled in container)
    tissue_detection_model_path     = '/root/.grandqc_models/tissue/Tissue_Detection_MPP10.pth'
    artefact_detection_model_path   = '/root/.grandqc_models/artefact/GrandQC_MPP15.pth'
    filter_artefacts                = false  // Disabled by default (memory-intensive on large slides)

    // Inference settings
    batch_size                      = 8
    device                          = null
    bf16                            = false
    tta                             = false

    // Tiling settings
    tile_size                       = 1024
    overlap                         = 64

    // Output options (csv for density stats, spatialdata for Zarr store)
    output_type                     = 'csv spatialdata'
}

// Load base config
includeConfig 'conf/base.config'

// Profile definitions
profiles {
    debug {
        dumpHashes              = true
        process.beforeScript    = 'echo $HOSTNAME'
        cleanup                 = false
    }
    docker {
        docker.enabled          = true
        conda.enabled           = false
        singularity.enabled     = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
        docker.runOptions       = '-u $(id -u):$(id -g)'
    }
    singularity {
        singularity.enabled     = true
        singularity.autoMounts  = true
        conda.enabled           = false
        docker.enabled          = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
    }
    apptainer {
        apptainer.enabled       = true
        apptainer.autoMounts    = true
        conda.enabled           = false
        docker.enabled          = false
        singularity.enabled     = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
    }
    gpu {
        docker.runOptions       = '-u $(id -u):$(id -g) --gpus all'
        singularity.runOptions  = '--nv'
        apptainer.runOptions    = '--nv'
        process {
            withLabel: process_gpu {
                accelerator = 1
            }
        }
    }
    tower {
        includeConfig 'conf/tower.config'
    }
    tower_gpu {
        includeConfig 'conf/tower.config'
        process {
            withLabel: process_gpu {
                accelerator = 1
            }
        }
    }
    test {
        includeConfig 'conf/test.config'
    }
    tower_test {
        params.input  = 'test/tower_samplesheet.csv'
        params.outdir = 's3://htan-project-tower-bucket/classpose/results'
    }
}

// Capture exit codes from upstream processes when piping
process.shell = ['/bin/bash', '-euo', 'pipefail']

// Execution reports
def trace_timestamp = new java.util.Date().format('yyyy-MM-dd_HH-mm-ss')
timeline {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_timeline_${trace_timestamp}.html"
}
report {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_report_${trace_timestamp}.html"
}
trace {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_trace_${trace_timestamp}.txt"
}
dag {
    enabled = true
    file    = "${params.outdir}/pipeline_info/pipeline_dag_${trace_timestamp}.svg"
}

// Manifest
manifest {
    name            = 'nf-classpose'
    author          = ''
    homePage        = 'https://github.com/adamjtaylor/nf-classpose'
    description     = 'Nextflow wrapper for Classpose WSI cell classification'
    mainScript      = 'main.nf'
    nextflowVersion = '!>=23.04.0'
    version         = '1.0.0'
}
